
@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                           
                      <img src="@item.BlogThumbnailImage" height="225" style="width: 100%;"/> 
                            
                            <div class="product-desc">
                                <span class="product-price">
                                    @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))
                                </span> 
                                <small class="text-muted">@item.Category.CategoryName</small>
                                <a href="/Blog/BlogDetails/@item.BlogId/" class="product-name"> @item.BlogTitle</a>
                                <div class="small m-t-xs">
                                    @item.BlogContent.Substring(0,item.BlogContent.Substring(0,130).LastIndexOf(" "))
                                </div>
                                <div class="m-t text-righ">

                                    <a href="/Blog/BlogDetails/@item.BlogId/" class="btn btn-xs btn-outline btn-primary">Detaylar <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
</body>

</html>


