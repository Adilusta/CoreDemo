@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<br />

<table class="table table-bordered">
	<thead>
		<tr>
			<th>#</th>
			<th>Kategori Adı</th>
			<th>Pasif Yap</th>
			<th>Aktif Yap</th>
			<th>Düzenle</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
				<tr>
					<th>@item.CategoryID</th>
					<td>@item.CategoryName</td>
					<td >
						<a href="/Admin/Category/DeleteCategory/@item.CategoryID/" id="DeleteBtn" 
				onclick="return confirm('Silmek istediğinize emin misiniz');
				" class="btn btn-danger"> Pasif yap</a> 

					</td>

					<td > <a href="#" class="btn btn-warning"> Aktif yap</a> </td>
					<td > <a href="#" class="btn btn-success"> Düzenle</a> </td>
				</tr>
		}
	</tbody>
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni kategori </a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))