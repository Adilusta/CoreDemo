@using EntityLayer.Concrete


@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Bloglarınız</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
   {
       <tr>
           <th>@item.BlogId</th>
           <td>@item.BlogTitle</td>
           <td>@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
           <td>@item.Category.CategoryName</td>
            <td>

         
           @if (item.BlogStatus )
            {
            <span class="badge badge-success">Aktif</span>
            }
            @if (!item.BlogStatus)
            {
            <span class="badge badge-secondary">Pasif</span>
            }
                 </td>
           @*<td>@item.BlogStatus</td>*@
             
           <td> 
                       <a href="/Blog/BlogDelete/@item.BlogId"class="btn btn-danger"
                   onclick="return confirm('Silmek istediğine emin misin?');" >  Sil </a>     
           
                 
           </td>
                
           <td> 
               <a href="/Blog/EditBlog/@item.BlogId" class="btn btn-warning"> Düzenle </a> 
               </td>

             
       </tr>
   }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary"> Yeni Blog Oluştur </a>
