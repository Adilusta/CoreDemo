@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj oluştur</h1>
<br />
@using (Html.BeginForm("SendMessage","Message",FormMethod.Post))
{
    @Html.Label("Alıcı")
     <br />
   @* @Html.TextBoxFor(x=>x.Subject,new{@class ="form-control"})*@
   @Html.DropDownListFor(x=>x.ReceiverID,(List<SelectListItem>) ViewBag.GetUsersForMessage,new{@class="form-control"})
   <br />
    @Html.Label("Konu")
    <br />
    @Html.TextBoxFor(x=>x.Subject,new{@class ="form-control"})
    <br />
    @Html.Label("Mesajınız")
    @Html.TextAreaFor(x=>x.MessageDetails,15,3 ,new{@class ="form-control"})
    <br />
    <button class="btn btn-info" style= "font-size:medium;"> Mesajı Gönder</button>
}



