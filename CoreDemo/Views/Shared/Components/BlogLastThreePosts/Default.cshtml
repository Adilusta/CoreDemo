

@using EntityLayer.Concrete
@model List<Blog>

  
     <div class="col-lg-4 footer-grid-agileits-w3ls text-left">
   
        
 
                    <div class="tech-btm">
                        <h3>Son Gönderiler </h3>
        @foreach (var item in Model)
        {
        
                        <div class="blog-grids row mb-3">
                            <div class="col-md-5 blog-grid-left">
                                    <a href="/Blog/BlogDetails/@item.BlogId">
                                    <img src="@item.BlogThumbnailImage" class="card-img-top img- fluid" alt="">
                                </a>
                            </div>
                            <div class="col-md-7 blog-grid-right">
                                <h3 style="font-size:medium" >
                                    
                                    @item.BlogTitle
                                     

                                </h3>
                                <h5>
                                        <a href="/Blog/Index/@item.BlogId">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,70).LastIndexOf(" "))...</a>
                                </h5>
                                <div class="sub-meta">
                                    <span>
                                            <i class="far fa-clock"></i> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</span>
                                </div>
                            </div>

                        </div>
        }
                        </div>
        
                </div>