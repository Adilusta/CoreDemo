
@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



<form class="form-group" method="post" enctype="multipart/form-data">
    @using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
    {
              <div class="col-12 grid-margin stretch-card">
                        <div class="card">
                          <div class="card-body">
                            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                            <br>



                    @Html.HiddenFor(x=> x.WriterID,new {@class="form-control"})

                            <p class="card-description"> Bu sayfadan bilgilerinizi düzenleyebilirsiniz. </p>
                            <div class="forms-sample">
                              <div class="form-group">
                                <label for="exampleInputName1">Yazar ad soyad</label>
                            @Html.TextBoxFor(x=> x.WriterName,new {@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterName, "", new {@class="text-danger" })

                            @*                            <input type="text" class="form-control" id="exampleInputName1" name="WriterName" placeholder="Name">
*@                          </div>
                              <div class="form-group">
                                <label for="exampleInputEmail3">Mail adresi</label>
                            @Html.TextBoxFor(x=> x.WriterMail,new {@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterMail, "", new {@class="text-danger" })
                              </div>


                              <div class="form-group">
                                <label for="exampleInputPassword4">Şifre</label>
                            @Html.PasswordFor(x=> x.WriterPassword,new {@class="form-control" , placeholder= "Şifreyi giriniz"} )
                            @Html.ValidationMessageFor(x=>x.WriterPassword, "", new {@class="text-danger" })

                              </div>

                              <div class="form-group">
                                       <label for="exampleInputPassword4">Şifreyi Tekrar Girin</label>
                                       <input type="password" class="form-control" name="ConfirmPassword" placeholder="Şifreyi tekrar girin">

                                       <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                              </div>

                              <div class="form-group">
                                <label>Yazar Görsel</label>
                                <input type="file" name="WriterImage" />
                              </div>

                              <div class="form-group">
                                <label for="exampleTextarea1">Yazar Hakkında</label>
                            @Html.TextAreaFor(x=> x.WriterAbout,10,3, new {@class="form-control"})
                              </div>
                              <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                              <button class="btn btn-light">İptal Et</button>
                            </div>
                          </div>
                        </div>
                      </div>

    }
</form>

